generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(cuid())
  name       String
  email      String       @unique
  role       Role
  attendance Attendance[]
  isPremium  Boolean      @default(false)
  createdAt  DateTime     @default(now())
   premiumFeatures  PremiumFeature[]  @relation("UserPremiumFeatures")
   premiumExpiresAt   DateTime?         // <--- Add this line
}

model Attendance {
  id        String   @id @default(uuid())
  student   User     @relation(fields: [studentId], references: [id])
  studentId String
  subject   String
  date      DateTime @default(now())
  status    String // "present", "absent", "late"
  markedBy  String // teacher id or "QR/Face"
}

model AttendanceToken{
  id       String   @id @default(uuid())
  token   String     @unique
  subject String
  professorId     String
  issuedAt DateTime @default(now())
  expiresAt DateTime
}

model PremiumFeature {
  id       String   @id @default(cuid())
  name     String   @unique // e.g., "AI_CHATBOT", "STUDY_PLAN"
  users    User[]   @relation("UserPremiumFeatures")
  createdAt DateTime @default(now())
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  type        EventType
  createdBy   String // admin id or system identifier
  createdAt   DateTime @default(now())
}

enum EventType {
  HOLIDAY
  EXAM
  EVENT
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum PremiumFeatureType {
  AI_CHATBOT
  STUDY_PLAN
  CALENDAR_SYNC
}
